<h1>Add A Blogger</h1>
<% if @blogger.errors.any? %>
  <% @blogger.errors.full_messages.each do |error| %>
    
      <%= error %>

  <% end %>
<% end %>
<%= form_for @blogger do |f| %>
  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true %>
  </p>
  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :age %>
    <%= f.number_field :age %>
  </p>
  <%= f.submit %>
<% end %>
<%= link_to "Homepage", bloggers_path %>